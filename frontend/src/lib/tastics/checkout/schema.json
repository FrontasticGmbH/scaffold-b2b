{
  "name": "Checkout",
  "category": "Checkout",
  "schema": [
    {
      "name": "Content",
      "fields": [
        {
          "label": "Terms & Conditions Link",
          "field": "termsAndConditionsLink",
          "type": "reference",
          "required": true
        }
      ]
    },
    {
      "name": "Settings",
      "fields": [
        {
          "label": "Enable CT (commercetools) payment",
          "field": "enableCtCheckout",
          "type": "boolean",
          "default": true
        }
      ]
    },
    {
      "name": "Redirect URL after Checkout",
      "fields": [
        {
          "type": "description",
          "text": "This is the url where the customer will be redirected after a successful checkout."
        },
        {
          "label": "URL",
          "field": "callbackUrl",
          "type": "string",
          "default": "/thank-you"
        }
      ]
    }
  ]
}
