{
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "next/core-web-vitals",
    "plugin:react-hooks/recommended",
    "plugin:tailwindcss/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "plugins": ["@typescript-eslint", "import", "prettier", "tailwindcss", "react", "react-hooks"],
  "settings": {
    "import/resolver": {
      "node": true,
      "typescript": true
    }
  },
  "ignorePatterns": ["node_modules", "out", "*.config.js"],
  "rules": {
    "@typescript-eslint/no-empty-function": "off",
    "tailwindcss/classnames-order": ["warn", { "officialSorting": true }],
    "tailwindcss/enforces-negative-arbitrary-values": "warn",
    "tailwindcss/enforces-shorthand": "warn",
    "tailwindcss/migration-from-tailwind-2": "warn",
    "tailwindcss/no-custom-classname": "warn",
    "tailwindcss/no-contradicting-classname": "error",
    "prettier/prettier": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    "import/no-named-as-default": "off",
    "jsx-a11y/alt-text": "off",
    "import/order": [
      "warn",
      {
        "groups": ["builtin", ["external", "internal", "unknown"], ["parent", "sibling", "index"], "type", "object"],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "next",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "next/**",
            "group": "external",
            "position": "before"
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.spec.{ts,tsx}"],
      "extends": ["plugin:jest/recommended"],
      "env": {
        "jest": true
      },
      "plugins": ["jest"]
    }
  ]
}
